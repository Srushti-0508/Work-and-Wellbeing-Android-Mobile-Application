<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskFragment"
    android:background="@color/white">
    <TextView
        android:id="@+id/completedListHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_nav_frame"
        android:padding="8dp"
        android:backgroundTint="@color/active_color"
        android:textSize="15sp"
        android:textColor="@color/heading"
        android:drawableLeft="@drawable/habit"
        android:drawableTint="@color/heading"
        android:text="View Completed Task"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/taskrecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/completedListHeading" />

    <TextView
        android:id="@+id/CompletedTaskText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Completed Task"
        app:layout_constraintTop_toBottomOf="@+id/taskrecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"/>

    <ListView
        android:id="@+id/completedTaskLV"
        android:textAlignment="textStart"
        android:background="@drawable/bg_frame"
        android:backgroundTint="@color/heading"
        android:divider="@color/heading"
        android:scrollbars="vertical"
        android:scrollIndicators="end"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/CompletedTaskText" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="336dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/bg"
        android:clickable="true"
        android:contentDescription="Add new Task"
        android:pointerIcon="arrow"
        android:src="@drawable/add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/heading" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>